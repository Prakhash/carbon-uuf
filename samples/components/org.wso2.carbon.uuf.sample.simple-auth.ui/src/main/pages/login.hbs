{{layout "main"}}
{{title (i18n "simple-auth.page.login.title") " | " (i18n "app.name")}}
{{css "css/login.css"}}

{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>{{i18n "simple-auth.page.login.alert.heading"}}</strong>
            {{errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{/if}}
    <div class="page-content-wrapper">
        <div class="container">
            <div class="login-form-wrapper">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div class="brand-container add-margin-bottom-5x">
                            <div class="row">
                                <div class="col-xs-6 col-sm-3 col-md-9 col-lg-9 center-block float-remove-sm
                                float-remove-xs pull-right-md pull-right-lg">
                                    <img class="img-responsive brand-spacer" src="{{public "images/logo-white.png"}}"
                                         alt="wso2-logo" />
                                </div>
                            </div>
                            <h2 class="text-center-sm text-center-xs text-center-md text-right">{{i18n "app.name"}}</h2>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
                        <div class="data-container">
                            <form id="form-login" class="form-horizontal" method="post">
                                <h3>{{i18n "simple-auth.page.login.form.heading"}}</h3>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <div class="input-group input-wrap">
                                            <input type="text" class="form-control" name="username"
                                                   placeholder="{{i18n "simple-auth.page.login.form.username.placeholder"}}" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <div class="input-group input-wrap">
                                            <input type="password" class="form-control" name="password"
                                                   placeholder="{{i18n "simple-auth.page.login.form.password.placeholder"}}"
                                                   autocomplete="off" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <button type="submit" class="btn btn-default btn-primary add-margin-right-2x">
                                            {{i18n "simple-auth.page.login.form.submit"}}
                                        </button>
                                    </div>
                                </div>
                                <a href="{{@contextPath}}/simple-auth/register"
                                   class="add-margin-bottom-5x remove-margin-lg remove-margin-md">
                                    {{i18n "simple-auth.page.login.link.forgot"}}
                                </a>
                                <p class="hidden-xs hidden-sm">
                                    {{i18n "simple-auth.page.login.link.no-account"}}
                                    <a href="{{@contextPath}}/simple-auth/register">
                                        {{i18n "simple-auth.page.login.link.register"}}
                                    </a>
                                </p>
                            </form>
                        </div>
                        <p class="visible-xs visible-sm add-margin-2x text-center">
                            {{i18n "simple-auth.page.login.link.no-account"}}
                            <a href="{{@contextPath}}/simple-auth/register">
                                {{i18n "simple-auth.page.login.link.register"}}
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/fillZone}}
